{
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@ts-ioc/annotations":[
        "packages/annotations/src"
      ],
      "@ts-ioc/core": [
        "packages/core/src"
      ],
      "@ts-ioc/aop":[
        "packages/aop/src"
      ],
      "@ts-ioc/bootstrap":[
        "packages/bootstrap/src"
      ],
      "@ts-ioc/logs": [
        "packages/logs/src"
      ],
      "@ts-ioc/platform-browser":[
        "packages/platform-browser/src"
      ],
      "@ts-ioc/platform-browser/bootstrap":[
        "packages/platform-browser/bootstrap/src"
      ],
      "@ts-ioc/platform-server":[
        "packages/platform-server/src"
      ],
      "@ts-ioc/platform-server/bootstrap":[
        "packages/platform-server/bootstrap/src"
      ],
      "@ts-ioc/unit": [
        "packages/unit/src"
      ],
    },
    "module": "commonjs",
    "target":"es5",
    "lib": ["dom", "es2015", "es2017"],
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "noLib": false,
    "jsx":"preserve",
    "emitDecoratorMetadata": true,
    "experimentalDecorators":true,
    "sourceMap": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "test",
    "lib"   
  ],
  "compileOnSave": false
}