{
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": ".",
    "strict": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@tsdi/annotations": [
        "packages/annotations/src"
      ],
      "@tsdi/ioc": [
        "packages/ioc/src"
      ],
      "@tsdi/core": [
        "packages/core/src"
      ],
      "@tsdi/aop": [
        "packages/aop/src"
      ],
      "@tsdi/boot": [
        "packages/boot/src"
      ],
      "@tsdi/typeorm-datapter": [
        "packages/typeorm-datapter/src"
      ],
      "@tsdi/components": [
        "packages/components/src"
      ],
      "@tsdi/compiler": [
        "packages/compiler/src"
      ],
      "@tsdi/logs": [
        "packages/logs/src"
      ],
      "@tsdi/platform-browser": [
        "packages/platform-browser/src"
      ],
      "@tsdi/platform-server": [
        "packages/platform-server/src"
      ],
      "@tsdi/unit": [
        "packages/unit/src"
      ],
      "@tsdi/unit-console": [
        "packages/unit-console/src"
      ],
      "@tsdi/activities": [
        "packages/activities/src"
      ],
      "@tsdi/pack": [
        "packages/pack/src"
      ],
      "@tsdi/platform-server-activities": [
        "packages/platform-server-activities/src"
      ],
      "@tsdi/platform-browser-activities": [
        "packages/platform-browser-activities/src"
      ]
    },
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ]
  },
  "exclude": [
    "test",
    "lib"
  ],
  "compileOnSave": false
}