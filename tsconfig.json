{
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": ".",
    "strict": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "paths": {
      "@tsdi/*": [
        "packages/*"
      ],
    },
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ]
  },
  "exclude": [
    "test",
    "lib"
  ],
  "compileOnSave": false
}