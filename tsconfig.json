{
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": ".",
    "strict": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@tsdi/annotations": [
        "packages/annotations/src"
      ],
      "@tsdi/ioc": [
        "packages/ioc/src"
      ],
      "@tsdi/aop": [
        "packages/aop/src"
      ],
      "@tsdi/core": [
        "packages/core/src"
      ],
      "@tsdi/common": [
        "packages/common/src"
      ],
      "@tsdi/repository":[
        "packages/repository/src"
      ],
      "@tsdi/transport": [
        "packages/transport/src"
      ],
      "@tsdi/transport-amqp": [
        "packages/transport-amqp/src"
      ],
      "@tsdi/transport-grpc": [
        "packages/transport-grpc/src"
      ],
      "@tsdi/transport-kafka": [
        "packages/transport-kafka/src"
      ],
      "@tsdi/transport-modbus": [
        "packages/transport-modbus/src"
      ],
      "@tsdi/transport-mqtt": [
        "packages/transport-mqtt/src"
      ],
      "@tsdi/transport-nats": [
        "packages/transport-nats/src"
      ],
      "@tsdi/transport-redis": [
        "packages/transport-redis/src"
      ],
      "@tsdi/transport-ws": [
        "packages/transport-ws/src"
      ],
      "@tsdi/transport-coap": [
        "packages/transport-coap/src"
      ],
      "@tsdi/security": [
        "packages/security/src"
      ],
      "@tsdi/boot": [
        "packages/boot/src"
      ],
      "@tsdi/typeorm-adapter": [
        "packages/typeorm-adapter/src"
      ],
      "@tsdi/swagger": [
        "packages/swagger/src"
      ],
      "@tsdi/components": [
        "packages/components/src"
      ],
      "@tsdi/compiler": [
        "packages/compiler/src"
      ],
      "@tsdi/logs": [
        "packages/logs/src"
      ],
      "@tsdi/platform-browser": [
        "packages/platform-browser/src"
      ],
      "@tsdi/platform-server": [
        "packages/platform-server/src"
      ],
      "@tsdi/platform-server-common": [
        "packages/platform-server-common/src"
      ],
      "@tsdi/unit": [
        "packages/unit/src"
      ],
      "@tsdi/unit-console": [
        "packages/unit-console/src"
      ],
      "@tsdi/activities": [
        "packages/activities/src"
      ],
      "@tsdi/pack": [
        "packages/pack/src"
      ],
      "@tsdi/platform-server-activities": [
        "packages/platform-server-activities/src"
      ],
      "@tsdi/platform-browser-activities": [
        "packages/platform-browser-activities/src"
      ]
    },
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ]
  },
  "exclude": [
    "test",
    "lib"
  ],
  "compileOnSave": false
}