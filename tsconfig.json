{
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@tsdi/annotations":[
        "packages/annotations/src"
      ],
      "@tsdi/ioc": [
        "packages/ioc/src"
      ],
      "@tsdi/core": [
        "packages/core/src"
      ],
      "@tsdi/aop":[
        "packages/aop/src"
      ],
      "@tsdi/boot":[
        "packages/boot/src"
      ],
      "@tsdi/components":[
        "packages/components/src"
      ],
      "@tsdi/logs": [
        "packages/logs/src"
      ],
      "@tsdi/platform-browser":[
        "packages/platform-browser/src"
      ],
      "@tsdi/platform-browser-boot":[
        "packages/platform-browser-boot/src"
      ],
      "@tsdi/platform-server":[
        "packages/platform-server/src"
      ],
      "@tsdi/platform-server-logs":[
        "packages/platform-server-logs/src"
      ],
      "@tsdi/platform-server-boot":[
        "packages/platform-server-boot/src"
      ],
      "@tsdi/unit": [
        "packages/unit/src"
      ],
      "@tsdi/unit-console": [
        "packages/unit-console/src"
      ],
      "@tsdi/activities": [
        "packages/activities/src"
      ],
      "@tsdi/pack": [
        "packages/pack/src"
      ],
      "@tsdi/platform-server-activities": [
        "packages/platform-server-activities/src"
      ],
      "@tsdi/platform-browser-activities": [
        "packages/platform-browser-activities/src"
      ]
    },
    "module": "commonjs",
    "target":"es5",
    "lib": ["dom", "es2015", "es2017"],
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "noLib": false,
    "jsx":"preserve",
    "emitDecoratorMetadata": true,
    "experimentalDecorators":true,
    "sourceMap": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "test",
    "lib"   
  ],
  "compileOnSave": false
}