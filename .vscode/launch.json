    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Activities",
            "args": [
                "${workspaceRoot}/packages/activities/taskfile.ts" 
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}